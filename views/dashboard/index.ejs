<%- include('../components/header', {title: "Dashboard"}); %>
<%- include('../components/nav', {dashboard: "active"}); %>
<div class="uk-container uk-container-xsmall" style="padding-top: 10%;">
  <% if ( sessionFlash && sessionFlash.message) { %>
  <div class="uk-alert-<%= sessionFlash.type %>" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p><%= sessionFlash.message %></p>
  </div>
  <% } %>
  <%- include('../components/subheader', {index: "active", headline: "Welcome!"}); %>
  <form class="uk-grid-small" uk-grid style="margin-top: 8%;" method="POST" enctype="multipart/form-data">
    <div class="uk-width-1-1">
      <input class="uk-input" type="text" maxlength="95" name="desc" value="<%= user.desc ? user.desc : '' %>"
        placeholder="<%= user.desc ? '' : 'Your description' %>">
    </div>
    <div class="uk-width-1-2@s">
      <input class="uk-input" type="text" name="name" value="<%= user.name %>" required>
    </div>
    <div class="uk-width-1-2@s">
      <input class="uk-input" type="text" value="<%= user.email %>" disabled>
    </div>
    <div class="uk-width-1-4@s uk-position-relative">
      <div class="uk-position-absolute" style="line-height: 40px; right: 15%">â‚¬ /lesson</div>
      <input class="uk-input uk-text-left" type="number" min="1" max="1000" name="price"
        value="<%= user.role === 'teacher' ? (user.price ? user.price : ''):'' %>" placeholder="<%= user.price ? '' : 'Price' %>" required <%= user.role === 'student' ? 'disabled' : ''%>>
    </div>
    <div class="uk-width-1-4@s">
      <input class="uk-input" type="text" name="city" value="<%= user.city ? user.city : '' %>"
        placeholder="<%= user.city ? '' : 'Your city' %>">
    </div>
    <div uk-form-custom="target: true" uk-tooltip="title: Accepted file types: png/jpg/jpeg; pos: right">
      <img src="<%= user.img ? user.img : 'assets/avatar-placeholder.gif' %>" width="30" alt="<%= user.name %>'s profile picture" />
      <input type="file" name="img">
      <input class="uk-input uk-form-width-small" type="text" placeholder="Upload here">
      <div class="uk-text-small uk-inline">Your picture</div>
    </div>
    <div class="uk-width-1-3@s uk-text-center" style="line-height: 40px;">
      Change your password:
    </div>
    <div class="uk-width-1-3@s">
      <input class="uk-input" type="text" minlength="6" name="pass1" placeholder="Password">
    </div>
    <div class="uk-width-1-3@s">
      <input class="uk-input" type="text" minlength="6" name="pass2" placeholder="Password again">
    </div>
    <div class="uk-width-1-1@s uk-text-center uk-margin">
      <input type="submit" value="Save changes" class="uk-button uk-button-secondary">
    </div>
  </form>
</div>
<%- include('../components/footer') %>
