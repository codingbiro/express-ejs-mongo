<%- include('../components/header', {title: "Your calendar"}); %>
<%- include('../components/nav', {dashboard: "active"}); %>
    <div class="uk-container uk-container-xsmall" style="padding-top: 10%;">
      <%- include('../components/subheader', {calendar: "active", headline: "When are you available?"}); %>
      <div style="margin-top: 4%; text-align: center;">
      <%- include('../utils/alert',Â {}); %>
      </div>
      <div class="uk-margin uk-child-width-1-3@m" style="padding-top: 4%; text-align: center;">
        <form method="POST">
          <select class="uk-select uk-inline" name="month">
            <option value="3">April</option>
            <option value="4">May</option>
            <option value="5">June</option>
            <option value="6">July</option>
          </select>
          <input class="uk-select uk-inline" type="number" name="day" min="1" max="31" placeholder="Day" style="background-image: none!important;" required>
          <input class="uk-select uk-inline" type="number" name="hour" min="0" max="23" placeholder="Hours" style="background-image: none!important;" required>
          <input class="uk-select uk-inline" type="number" name="minute" min="0" max="59" placeholder="Minutes" style="background-image: none!important;" required>
          <input class="uk-button uk-button-secondary" type="submit" value="Save">
        </form>
      </div>
      <h1 class="uk-text-lead">Your saved dates</h1>
      <ul class="uk-child-width-1-2 uk-child-width-1-3@m uk-text-center" uk-grid>
        <% lessons.forEach(function(lesson){ %>
          <%- include('../utils/date', {lesson: lesson}); %>
        <% }); %>
      </ul>
    </div>
<%- include('../components/footer') %>
