<%- include('../components/header', {title: "Your calendar"}); %>
<%- include('../components/nav', {dashboard: "active"}); %>
<div class="uk-container uk-container-xsmall" style="padding-top: 10%;">
  <% if ( sessionFlash && sessionFlash.message) { %>
  <div class="uk-alert-<%= sessionFlash.type %>" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p><%= sessionFlash.message %></p>
  </div>
  <% } %>
  <%- include('../components/subheader', {calendar: "active", headline: "When are you available?"}); %>
  <div class="uk-margin uk-child-width-1-3@m" style="padding-top: 4%; text-align: center;">
    <form method="POST">
      <select class="uk-select uk-inline" name="month">
        <option value="3">April</option>
        <option value="4">May</option>
        <option value="5">June</option>
        <option value="6">July</option>
      </select>
      <input class="uk-select uk-inline" type="number" name="day" min="1" max="31" placeholder="Day"
        style="background-image: none!important;" required>
      <input class="uk-select uk-inline" type="number" name="hour" min="0" max="23" placeholder="Hours"
        style="background-image: none!important;" required>
      <input class="uk-select uk-inline" type="number" name="minute" min="0" max="59" placeholder="Minutes"
        style="background-image: none!important;" required>
      <input class="uk-select uk-inline" type="number" name="duration" min="30" max="200" placeholder="Duration (Mins)"
        style="background-image: none!important;" required>
      <input class="uk-select uk-inline" type="text" name="subject" maxlength="40" placeholder="Subject"
        style="background-image: none!important;" required>
      <input class="uk-button uk-button-secondary uk-margin" type="submit" value="Save">
    </form>
  </div>
  <h1 class="uk-text-lead uk-text-primary">Your saved dates</h1>
  <ul class="uk-child-width-1-2 uk-child-width-1-3@m uk-text-center" uk-grid>
    <% lessons.forEach(function(lesson){ %>
    <%- include('../utils/date', {lesson: lesson}); %>
    <% }); %>
    <% if ( lessons.length === 0) { %>
    <h3 class="uk-text-left">No lessons yet. Start by adding one with the form above!</h3>
    <% } %>
  </ul>
</div>
<%- include('../components/footer') %>