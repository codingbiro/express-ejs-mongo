<%- include('components/header', {title: "Calendar"}); %>
<%- include('components/nav', {calendar: "active"}); %>
<div class="uk-container uk-container-xsmall" style="padding-top: 40px;">
  <% if ( sessionFlash && sessionFlash.message) { %>
    <div class="uk-alert-<%= sessionFlash.type %>" uk-alert>
      <a class="uk-alert-close" uk-close></a>
      <p><%= sessionFlash.message %></p>
    </div>
    <% } %>
  <div uk-filter="target: .js-filter">
    <ul class="uk-subnav uk-subnav-pill">
      <li class="uk-active" uk-filter-control><a href="#">All</a></li>
      <% users.forEach(function(user){ %>
      <li uk-filter-control="[data-color='<%= user.id %>']"><a href="#"><%= user.name %></a></li>
      <% }); %>
    </ul>
    <ul class="js-filter uk-child-width-1-2 uk-child-width-1-3@m uk-text-center" uk-grid>
      <% lessons.forEach(function(lesson){ %>
      <li data-color="<%= lesson._user %>">
        <a href="/profile/<%= lesson._user %>">
          <div class="uk-card uk-card-primary uk-card-body"
            style="color: white; background-color: #<%= utils.color(lesson._user) %>;">
            <div><%= utils.formatDate(lesson.start) %></div>
            <div><%= lesson.duration %> mins</div>
            <div><%= lesson.subject %></div>
          </div>
        </a>
      </li>
      <% }); %>

    </ul>
  </div>
</div>
<%- include('components/footer') %>